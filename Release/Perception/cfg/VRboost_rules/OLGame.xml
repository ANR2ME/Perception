<?xml version="1.0" encoding="utf-8"?>

<!-- Another below the horizon scanner -->
<Scanner>
  <ScannerGroups>
	<ScannerGroup>
		<ID>0</ID>
		<BaseAddress>7FF700000074</BaseAddress>
		<MemIncrement>100</MemIncrement>
		<MemIncCount>2FFFFFF</MemIncCount>
		<FailIfNotFound>True</FailIfNotFound>

		<ScanRule>
			<!-- Copy of Yaw in degrees -->
			<AxisName>NoAxis</AxisName>
			<AddressType>Float</AddressType>
			<ModificationToApply>FloatDoNothing</ModificationToApply>
			<BaseAddressOffset>00000000</BaseAddressOffset>
			<CheckForChanges>Changes</CheckForChanges>
			<Comparisons>
				<Compare type="Between">
					<MinValue>-180.0</MinValue>
					<MaxValue>-0.01</MaxValue>
				</Compare>
				<Compare type="Between">
					<MinValue>0.01</MinValue>
					<MaxValue>180.0</MaxValue>
				</Compare>
			</Comparisons>
		</ScanRule>
			
		<ScanRule>
			<!-- Copy of pitch -->
			<AxisName>NoAxis</AxisName>
			<AddressType>Float</AddressType>
			<ModificationToApply>FloatDoNothing</ModificationToApply>
			<BaseAddressOffset>00000004</BaseAddressOffset>
			<CheckForChanges>Changes</CheckForChanges>
			<Comparisons>
				<Compare type="BetweenIncl">
					<MinValue>-81.0</MinValue>
					<MaxValue>-0.01</MaxValue>
				</Compare>
				<!-- OR -->
				<Compare type="BetweenIncl">
					<MinValue>0.01</MinValue>
					<MaxValue>67.0</MaxValue>
				</Compare>
			</Comparisons>
		</ScanRule>
			
		<ScanRule>
			<AxisName>NoAxis</AxisName>
			<AddressType>Float</AddressType>
			<ModificationToApply>FloatDoNothing</ModificationToApply>
			<BaseAddressOffset>00000008</BaseAddressOffset>
			<CheckForChanges>Changes</CheckForChanges>
			<Comparisons>
				<Compare type="Equal">
					<MinValue>0.0</MinValue>
				</Compare>
			</Comparisons>
		</ScanRule>
			
		<ScanRule>
			<AxisName>NoAxis</AxisName>
			<AddressType>Float</AddressType>
			<ModificationToApply>FloatDoNothing</ModificationToApply>
			<BaseAddressOffset>00000018</BaseAddressOffset>
			<CheckForChanges>Changes</CheckForChanges>
			<Comparisons>
				<Compare type="Equal">
					<MinValue>0.0</MinValue>
				</Compare>
			</Comparisons>
		</ScanRule>
			
		<ScanRule>
			<AxisName>TrackerPitch</AxisName>
			<AddressType>Float</AddressType>
			<ModificationToApply>FloatSimpleApply</ModificationToApply>
			<BaseAddressOffset>0000001C</BaseAddressOffset>
			<CheckForChanges>Changes</CheckForChanges>
			<Comparisons>
				<Compare type="BetweenIncl">
					<MinValue>-81.0</MinValue>
					<MaxValue>-0.1</MaxValue>
				</Compare>
				<!-- OR -->
<!--			<Compare type="BetweenIncl">
					<MinValue>0.001</MinValue>
					<MaxValue>67.0</MaxValue>
				</Compare> -->
			</Comparisons>
		</ScanRule>
			
	</ScannerGroup>


	<ScannerGroup>
		<ID>1</ID>
		<BaseAddress>7FF7000000CC</BaseAddress>
		<MemIncrement>100</MemIncrement>
		<MemIncCount>FFFFFF</MemIncCount>
		<FailIfNotFound>False</FailIfNotFound>

		<ScanRule>
			<AxisName>NoAxis</AxisName>
			<AddressType>DWORD</AddressType>
			<ModificationToApply>FloatDoNothing</ModificationToApply>
			<BaseAddressOffset>00000000</BaseAddressOffset>
			<CheckForChanges>NoChange</CheckForChanges>
			<Comparisons>
				<Compare type="Equal">
					<MinValue>00000000</MinValue>
				</Compare>
			</Comparisons>
		</ScanRule>
			
		<ScanRule>
			<AxisName>TrackerYaw</AxisName>
			<AddressType>DWORD</AddressType>
			<ModificationToApply>FloatUnrealCompass</ModificationToApply>
			<BaseAddressOffset>00000004</BaseAddressOffset>
			<CheckForChanges>Changes</CheckForChanges>
			<Comparisons>
				<Compare type="BetweenIncl">
					<MinValue>00000002</MinValue>
					<MaxValue>00007FFF</MaxValue>
				</Compare>
				<!-- OR -->
				<Compare type="BetweenIncl">
					<MinValue>FFFF8000</MinValue>
					<MaxValue>FFFFFFFE</MaxValue>
				</Compare>
			</Comparisons>
		</ScanRule>
			
		<ScanRule>
			<AxisName>NoAxis</AxisName>
			<AddressType>DWORD</AddressType>
			<ModificationToApply>FloatDoNothing</ModificationToApply>
			<BaseAddressOffset>00000008</BaseAddressOffset>
			<CheckForChanges>NoChange</CheckForChanges>
			<Comparisons>
				<Compare type="Equal">
					<MinValue>00000000</MinValue>
				</Compare>
			</Comparisons>
		</ScanRule>
			
		<ScanRule>
			<AxisName>NoAxis</AxisName>
			<AddressType>DWORD</AddressType>
			<ModificationToApply>FloatDoNothing</ModificationToApply>
			<BaseAddressOffset>0000000C</BaseAddressOffset>
			<CheckForChanges>NoChange</CheckForChanges>
			<Comparisons>
				<Compare type="Equal">
					<MinValue>3F800000</MinValue>
				</Compare>
			</Comparisons>
		</ScanRule>
			
		<ScanRule>
			<AxisName>NoAxis</AxisName>
			<AddressType>DWORD</AddressType>
			<ModificationToApply>FloatDoNothing</ModificationToApply>
			<BaseAddressOffset>00000010</BaseAddressOffset>
			<CheckForChanges>NoChange</CheckForChanges>
			<Comparisons>
				<Compare type="Equal">
					<MinValue>3F800000</MinValue>
				</Compare>
			</Comparisons>
		</ScanRule>

	</ScannerGroup>
  </ScannerGroups>
  
	<!-- The following is used to direct the user to move their HMD so that addresses can be filtered, don't repeat -->
	<ScanAssistSequence>
		<ScanAssistStep>
			<TimeBeforeCheck>3000</TimeBeforeCheck>
			<Pose>UP MORE THAN 45 DEGREES</Pose>
			<Axis>
				<AxisName>TrackerPitch</AxisName>
				<AddressType>Float</AddressType>
				<Comparisons>
					<Compare type="BetweenIncl">
						<MinValue>30.0</MinValue>
						<MaxValue>67.0</MaxValue>
					</Compare>
				</Comparisons>
			</Axis>
		</ScanAssistStep>
		<ScanAssistStep>
			<TimeBeforeCheck>3000</TimeBeforeCheck>
			<Pose>DOWN MORE THAN 45 DEGREES</Pose>
			<Axis>
				<AxisName>TrackerPitch</AxisName>
				<AddressType>Float</AddressType>
				<Comparisons>
					<Compare type="BetweenIncl">
						<MinValue>-81.0</MinValue>
						<MaxValue>-40.0</MaxValue>
					</Compare>
				</Comparisons>
			</Axis>
		</ScanAssistStep>
	</ScanAssistSequence>    
</Scanner>
